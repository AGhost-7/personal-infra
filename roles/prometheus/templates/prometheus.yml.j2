global:
  scrape_interval: 30s
  evaluation_interval: 30s
scrape_configs:

  - job_name: 'prometheus'
    static_configs:
    - targets: ['localhost:9090']

  - job_name: 'netdata'
    metrics_path: '/api/v1/allmetrics'
    params:
      format: [prometheus]
    honor_labels: true
    static_configs:
{% for host in groups['all'] %}
    - targets: ['{{hostvars[host][ufw_default_interface].ipv4.address}}:19999']
      labels:
        hostname: '{{hostvars[host].ansible_hostname}}'
{% endfor %}
