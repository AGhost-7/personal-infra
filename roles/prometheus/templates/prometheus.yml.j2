global:
  scrape_interval: 30s
  evaluation_interval: 30s
scrape_configs:

  - job_name: 'prometheus'
    static_configs:
    - targets: ['localhost:9090']

  - job_name: 'netdata'
    metrics_path: '/api/v1/allmetrics'
    params:
      format: [prometheus]
    honor_labels: true
    static_configs:
{% for host in groups['all'] %}
    - targets: ['{{hostvars[host][ufw_default_interface].ipv4.address}}:19999']
      labels:
        hostname: '{{hostvars[host].ansible_hostname}}'
{% endfor %}

  - job_name: 'blackbox'
    metrics_path: /probe
    params:
      module: [http_2xx]
    static_configs:
    - targets:
      - "https://chat.jonathan-boudreau.com"
      - "https://jokes.jonathan-boudreau.com"
      - "https://fingerboard.jonathan-boudreau.com"
      - "https://jenkins.jonathan-boudreau.com/login"
    relabel_configs:
    - source_labels: [__address__]
      target_label: __param_target
    - source_labels: [__param_target]
      target_label: instance
    - target_label: __address__
      replacement: localhost:9115

