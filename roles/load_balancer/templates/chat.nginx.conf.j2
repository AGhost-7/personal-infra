
server {
	listen 80;
	server_name chat.jonathan-boudreau.com;

	location / {
		return 301 https://chat.jonathan-boudreau.com$request_uri;
	}
}

server {
	listen 443 ssl;

	server_name chat.jonathan-boudreau.com;

	ssl_protocols TLSv1.3 TLSv1.2;
	ssl_ciphers ECDHE-ECDSA-AES256-GCM-SHA384:ECDHE-RSA-AES256-GCM-SHA384:ECDHE-ECDSA-CHACHA20-POLY1305:ECDHE-RSA-CHACHA20-POLY1305:ECDHE-PSK-CHACHA20-POLY1305;
	ssl_certificate /etc/letsencrypt/live/jonathan-boudreau.com/fullchain.pem;
	ssl_certificate_key /etc/letsencrypt/live/jonathan-boudreau.com/privkey.pem;

	location /socket {
		proxy_pass http://localhost:9000;
		proxy_read_timeout 86400s;
		proxy_send_timeout 86400s;
		proxy_http_version 1.1;
		proxy_set_header Upgrade $http_upgrade;
		proxy_set_header Connection "upgrade";
	}

	location / {
		proxy_pass http://localhost:9000;
	}

}
