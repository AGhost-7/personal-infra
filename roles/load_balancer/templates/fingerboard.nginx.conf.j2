
server {
	listen 80;
	server_name fingerboard.jonathan-boudreau.com;

	location / {
		return 301 https://fingerboard.jonathan-boudreau.com$request_uri;
	}
}

server {
	listen 443 ssl;

	server_name fingerboard.jonathan-boudreau.com;

	ssl_protocols TLSv1.3 TLSv1.2;
	ssl_ciphers ECDHE-ECDSA-AES256-GCM-SHA384:ECDHE-RSA-AES256-GCM-SHA384:ECDHE-ECDSA-CHACHA20-POLY1305:ECDHE-RSA-CHACHA20-POLY1305:ECDHE-PSK-CHACHA20-POLY1305;
	ssl_certificate /etc/letsencrypt/live/jonathan-boudreau.com/fullchain.pem;
	ssl_certificate_key /etc/letsencrypt/live/jonathan-boudreau.com/privkey.pem;

	proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
	proxy_set_header X-Real-IP $remote_addr;
	proxy_set_header X-Forwarded-Ssl on;
	proxy_set_header X-Forwarded-Host fingerboard.jonathan-boudreau.com;
	proxy_set_header X-Forwarded-Proto https;

	location / {
		proxy_pass http://localhost:8000;
	}

}
