FROM localhost:5000/base

RUN locale-gen en_CA.UTF-8
ENV LANG en_CA.UTF-8

RUN apt-get update && \
	apt-get install postgresql-9.3 -y

RUN git clone https://github.com/AGhost-7/node-shop.git

WORKDIR /node-shop

USER postgres

VOLUME /var/lib/postgresql/9.3/main

ENV PGDATA /var/lib/postgresql/9.3/main

EXPOSE 5432

CMD ["/usr/lib/postgresql/9.3/bin/postgres", "-c", "config_file=/etc/postgresql/9.3/main/postgresql.conf"]

